{
	"name": "pinescript",
    "displayName": "Pine Script",
    "description": "Pine Script V5 Syntax Highlighting & Snippets",
    "icon": "images/pineicon.png",
    "publisher": "JeylaniB",
    "license": "MIT",
    "version": "1.0.1",
    "engines": {
        "vscode": "^1.62.0"
    },
    "author": {
        "name": "Jeylani"
    },
    "categories": [
        "Language Packs",
        "Programming Languages"    
	],
    "keywords": [
        "pine",
        "pinescript",
        "Pine Script V5",
        "pine script",
        "pinecode",
        "pine code",
        "pineeditor",
        "pine editor",
        "tradingview",
        "trade",
        "trading"
    ],
	"activationEvents": [
        "onLanguage:pine"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "a.helloWorld",
				"title": "Hello World"
			}
		],
		"snippets": [
            {
                "language": "pine",
                "path": "./snippets/built-in_language_operators.json"
            },
            {
                "language": "pine",
                "path": "./snippets/built-in_functions.json"
            },
            {
                "language": "pine",
                "path": "./snippets/built-in_variables_dictionnary.json"
            },
            {
                "language": "pine",
                "path": "./snippets/built-in_scripts.json"
            },
            {
                "language": "pine",
                "path": "./snippets/comments.json"
            },
            {
                "language": "pine",
                "path": "./snippets/ect.json"
            },
            {
                "language": "pine",
                "path": "./snippets/f.json"
            },
            {
                "language": "pine",
                "path": "./snippets/loopscounters.json"
            },
            {
                "language": "pine",
                "path": "./snippets/principals.json"
            },
            {
                "language": "pine",
                "path": "./snippets/scripts_add.json"
            },
            {
                "language": "pine",
                "path": "./snippets/unicode.json"
            },
            {
                "language": "pine",
                "path": "./snippets/words.json"
            }
        ],
		"languages": [
            {
                "id": "pine",
                "aliases": [
                    "Pine Script",
                    "PineScript",
                    "Pine"
                ],
				"extensions": [
                    ".ps",
                    ".pine",
                    ".pinescript",
                    ".pinecode",
                    ".tdps",
                    ".trading",
                    ".tradingview",
                    ".script",
                    ".help"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
		"grammars": [
            {
                "language": "pine",
                "scopeName": "source.ps",
                "path": "./syntaxes/ps.tmLanguage.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	},
    "repository": {
        "type": "git",
        "url": "https://github.com/jeyllani/pinescript.git"
    }
}
