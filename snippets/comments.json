"Comment | Line ⇨ //": {
    "prefix": ["//", "comment.line_2"],
    "body": [
      "// --${1/./*/g}- ${1} -${1/./*/g}-- //",
      "",
      "${0}"
    ],
    "description": "Type & Tab"
},

